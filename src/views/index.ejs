<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>Members Only</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Members Only</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/messages">Chat</a>
            </li>
            <% if (typeof user !== 'undefined' && user) { %>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Welcome, <%= user.fullName %></a>
              </li>
            <% } else { %>
              <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
              </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-5">
      <% if (typeof user !== 'undefined' && user) { %>
        <div class="jumbotron">
          <h1 class="display-4">Welcome back, <%= user.fullName %>!</h1>
          <p class="lead">Ready to join the conversation? Head over to the chat now!</p>
          <a class="btn btn-primary btn-lg" href="/messages" role="button">Go to Chat</a>
        </div>
      <% } else { %>
        <div class="jumbotron">
          <h1 class="display-4">Welcome to Members Only!</h1>
          <p class="lead">Join our community to access exclusive content and chat with other members.</p>
          <a class="btn btn-primary btn-lg" href="/login" role="button">Login</a>
          <a class="btn btn-secondary btn-lg" href="/signup" role="button">Sign Up</a>
        </div>
      <% } %>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>